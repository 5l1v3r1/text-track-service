# text-track-rails.service
[Unit]
Description=Text Track Rails
[Service]
Environment=LANG=en_US.UTF-8
User=texttrack
Group=bigbluebutton
WorkingDirectory=/usr/local/text-track-service
ExecStart=/usr/bin/bash -lc '/home/texttrack/.rbenv/shims/bundle exec rails server -e production --bind 0.0.0.0 --port 4000'
Restart=always
[Install]
WantedBy=multi-user.target